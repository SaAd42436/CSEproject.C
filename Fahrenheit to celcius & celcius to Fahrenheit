#include <stdio.h>

int main() {
    float f, c;

    printf("Enter temperature in Fahrenheit: ");
    scanf("%f", &f);

    c = (f - 32) * 5 / 9;

    printf("Temperature in Celsius: %.2f\n", c);

    return 0;
}


#include <stdio.h>

int main() {
    float celsius, fahrenheit;

    printf("Enter Celsius: ");
    scanf("%f", &celsius);

    fahrenheit = (celsius * 9 / 5) + 32;

    printf("Fahrenheit: %.2f\n", fahrenheit);

    return 0;
}
